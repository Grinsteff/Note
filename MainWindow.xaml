<Window x:Class="WpfApp19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp19"
        mc:Ignorable="d"
        Title="Note.exe" Height="450" Width="800">
    <Grid>
        <Menu Height="41"
              VerticalAlignment="Top"
              Background="CadetBlue"
              HorizontalAlignment="Center"
              Foreground="White"
              FontSize="15px"
              Padding="10px"
              Width="800">
            
            <MenuItem Header="Файл" Height="24">
                <MenuItem Foreground="DeepSkyBlue"  x:Name="OpenFile" FontSize="16px" FontFamily="Comic Sans MS" Header="Открыть файл" Click="OpenFile_Click"></MenuItem>
                <MenuItem Foreground="DeepSkyBlue" x:Name="SaveFile" FontSize="16px" FontFamily="Comic Sans MS" Header="Сохранить файл" Click="SaveFile_Click"></MenuItem>
            </MenuItem>
            
            
        </Menu>
        <TextBox FontFamily="Comic Sans MS" Background="White" Foreground="Black" Margin="0,41,0,0" x:Name="textbox" TextWrapping="Wrap" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Hidden"></TextBox>
              
    </Grid>
</Window>
