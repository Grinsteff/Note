<Window x:Class="WpfApp19.Windows.exitwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp19.Windows"
        mc:Ignorable="d"
        Title="exitwindow" Height="250" Width="400">
    <Grid Background="Black" Margin="0,0,0,-6">
        <Label Foreground="White" HorizontalAlignment="Center">Вы действительно хотите выйти?</Label>
        <Button Height="30" Width="100" x:Name="btnexit" Click="btnexit_Click" Foreground="White" Background="OrangeRed" HorizontalAlignment="Left" VerticalAlignment="Center">Да</Button>
        <Button Height="30" Width="100" x:Name="btnnoexit" Click="btnnoexit_Click" Foreground="White" Background="OrangeRed" HorizontalAlignment="Right" VerticalAlignment="Center">Нет</Button>
    </Grid>
</Window>
